/* pages/ocr/ocr.wxss */
.container1 {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 3vh;
  margin-bottom: 3vh;
  height: 30vh;
}

.option{
  background-color: white;
  width: 85vw;
  height: 55vh;
  padding: 20rpx;
  /* margin: auto; */
  text-align: left; 
  border-radius: 3vh;
  box-shadow: 2rpx 2rpx 12rpx 2rpx #79797925;
}

.inputshow{
  height: 52vh;
  padding: 10px;
  background-color: white;
  border:0px solid red;
  display: block;
}

.result{
  /* text-shadow:4rpx 4rpx  rgba(140, 195, 240, 0.671); */
  font-family: "Microsoft YaHei", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
  font-size: 4vw;
  letter-spacing: 2px;
  /* font-weight: bold; */
  color:#3d3839;
  position: sticky;
  line-height: 10vw;
  /* word-spacing: 5px; */
  display: block; 
  text-overflow: ellipsis; 
  word-wrap: break-word;
}