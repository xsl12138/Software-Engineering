.root
{
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
}
.mistakes{
    margin-top: 2vh;
    width: 100vw;
    height: 6vh;
    background-color: rgba(255, 255, 255, 1);
    align-items: left;
    color: #3d3839;
}
.mistakes2{
    margin-left: 3vw;
    position: relative;
    line-height: 6vh;
    font-size: 2.5vh;
    font-family: "Microsoft YaHei", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
    letter-spacing: 1px;
    font-weight: bold;
}
.collections
{
    margin-top: 0.5vh;
    width: 750rpx;
    height: 6vh;
    background-color: rgb(255, 255, 255, 1);
    align-items: left;
    letter-spacing: 1px;
    font-size: 2.5vh;
    font-family: "Microsoft YaHei", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
    font-weight: bold;
    color:#3d3839;
}
.collections2
{
    line-height: 6vh;
    margin-left: 3vw;
}
.right_arrow
{
    margin-top:2.2vh;
    border:solid #ea8f75;
    border-width:0 7rpx 7rpx 0;
    padding:6rpx;
    position:absolute;
    right:30rpx;
    transform:rotate(-45deg);
    -webkit-transform:rotate(-45deg);
}
.button
{
    width:100%;
    background:white;
    border:none;
    text-align:left;
    margin:0rpx;
    line-height: 1.3;
    font-size:32rpx;
    top: 16rpx;
    left:16rpx;
}
.button::after{
    border:none;
    border-radius:0;
}
.right_arrow2
{
    /* margin-top:-30rpx; */
    margin-top: -3.6vh;
    margin-right:2rpx;
    border:solid #ea8f75;
    border-width:0 7rpx 7rpx 0;
    padding:6rpx;
    position:absolute;
    right:30rpx;
    transform:rotate(-45deg);
    -webkit-transform:rotate(-45deg);
}
.grade
{
    font-family: "Microsoft YaHei", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
    position: absolute; /* 相对relative也可以 */
    right: 0; /* 靠右调节 */
    margin-right: 35rpx;
    color: #3d3839;
    line-height: 6vh;
    font-size: 2.5vh;
    font-weight: normal;
}